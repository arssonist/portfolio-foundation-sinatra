<% content_for :main_key do %>
  <chunk of="html">
    <section class="main-blog2">
      <div class="wrap row small-up-1 medium-up-2">


        <div class="column" id="film-blog-details">
          <script id="film-blog-template" type="text/x-handlebars-template">
            <div id="film-blog-header">

              <h2>The Separator</h2>
              <div id="film-header-image">
                <img src="/img/blog2_pics/films/amadeus2_pic.jpg" />
              </div>
              <h5>A Blog About Film</h5>
              <p>
                Perhaps MoteZart's greatest works.
              </p>
            </div> <!--film-blog-header -->

            {{#each film_posts}}
              <dl>

                <dt>Event</dt>
                <dd>{{event}}</dd>

                <dt>Description</dt>
                <dd>{{description}}</dd>

                <dt>Films</dt>
                {{#each films}}
                <dd>
                <div id="image-container">

                  <div class="film-image-wrap">
                    <p>
                      {{this}}
                    </p>
                    <img src="img/blog2_pics/films/{{lookup ../image @index}}.jpg"/>
                    <a href="{{lookup ../url @index}}">Check out the Review!</a>

                  </div>
                </div>



                </dd>
                {{/each}}

                {{#each films}}
                <dd>
                  <!-- <img src= "img/blog2_pics/films/{{lookup ../image @index}}"/> -->

                </dd>
                  {{/each}}

                <!-- displaying url to image only -->
              <!-- {{#each films}}
                <dt>
                  {{lookup ../image @index}}
                </dt>
                {{/each}} -->

                <!-- CONTAINER FOR PICS AND URL -->
                <div class="film-image-url">
                </div>


              </dl>
              {{/each}}
          </script> <!--film-blog-template-->
        </div> <!--film-blog-detials -->

        <div class="column" id="nothing-blog-details">
            <script id="nothing-blog-template" type="text/x-handlebars-template">
              <div class="nothing-blog-header">

                <h4>Hi, I'm supposedly a writer</h4>
                <div id="nothing-header-image">
                <img src="img/nothing_pics/new-york-city.jpg" />
                </div>
                <h5>Stories, Reviews and Rants </h5>
                <p>
                  I lived in New York and wrote about whatever I felt like.
                </p>
              </div>
          {{#each nothing_posts}}
              <dl>
                <dt>Title</dt>
                <dd>{{event}}</dd>

                <dt>Description</dt>
                <dd>{{description}}</dd>

                <a href={{url}}><dd>Url</dd></a>

              </dl>
              {{/each}}
            </script>
        </div> <!--nothing column -->
      </div> <!-- row -->
    </section>
  </chunk>
<% end %>
