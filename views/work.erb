<% content_for :hero_key do %>
  <chunk of="html">
    <div class="hero-work">
        <div class="wrap">
            <div class="show-for-medium-up">
                <h1>My Work</h1>
                <h3>JavaScript: React, Vue and Node</h3>
            </div>
            <button type="button" class="button large">View Portfolio
                <br />
                <i class="fa fa-angle-down"></i>
            </button>
        </div>


    </div>
  </chunk>
<% end %>

<% content_for :main_key do %>
  <chunk of="html">
    <section class="main-work">

        <div id="work-details">
        <script id="work-template" type="text/x-handlebars-template">
          <div class="row small-up-1 medium-up-2 large-up-3">
          {{#each works}}
          <div class="column work-card" data-aos="fade-up">

            <div class="project-image-container">

              <a href="{{url}}"><img src="img/projects/{{image}}.png" alt={{name}} />
              </a>

              <div class="project-info-container">

                  <div class="project-info">
                      <h5 class="project-title">{{name}}</h5>


                  </div> <!-- project info -->
            </div> <!-- image-container -->



                </div> <!-- wrap-->


              </div> <!--column-->
                {{/each}}
              </div> <!--row + grid -->
                </script>
            </div>  <!--work-details-->

    </section>
  </chunk>
<% end %>
