<% content_for :hero_key do %>
  <chunk of="html">
    <div class="wrap hero-work">


      <h1>MY WORK</h1>
      <h3>Projects and Apps</h3>
        <p>

        </p>
        <hr />

    </div>
  </chunk>
<% end %>

<% content_for :main_key do %>
  <chunk of="html">
    <section class="main-work ">

      <div class="wrap row small-up-1 medium-up-2">

        <div class="column" id="work-details">
          <script id="work-template" type="text/x-handlebars-template">
            {{#each works}}
                <dl>
                  <dd>
                  <a href="{{url}}"><img src="img/projects/{{image}}.png" alt={{name}} />
                </a>
                  </dd>

                  <dt>Name:</dt>
                  <dd>{{name}}</dd>

                  <dt>Type:</dt>
                  <dd>{{type}}</dd>

                  <dt>Description:</dt>
                  <dd>{{description}}</dd>

                  <dt>Features:</dt>
                  <dd>{{features}}</dd>

                  <a href="{{github}}">
                    <dt>GitHub</dt>
                  </a>

                  <a href="{{url}}">
                    <dt>Url</dt>
                  </a>
                  </dl>
                {{/each}}

            </script>
          </div>

            <div class="column">
              <h2>Check Me Out</h2>
              <!-- funny font -->
              <hr>
              <p>
                Scroll up. Scroll down.
              </p>
              <p>

                If there's an image, click it.
              </p>
              <p>

                Want to see the code? Click on the Github link.</br>
              </p>

            </div>

      </div> <!-- wrap -->

    </section>
  </chunk>
<% end %>
