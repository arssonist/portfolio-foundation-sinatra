<% content_for :hero_key do %>
  <chunk of="html">

    <section class="hero-blog">
      <div class="wrap row">
        <div class="column">

          <a href="<%= $my_blog %>"><h2 id="blog-hero-title">Should I go to Code School</h2>
          </a>
          <h4>
          The coding bootcamp experience at Bitmaker.
          </h4>
          <p>
            Thinking of going to a coding bootcamp? I went, and wrote about it. It's not all it claims to be...
          </p>
              <hr/>
        </div>

      </div> <!-- wrap -->
    </section>

  </chunk>
<% end %>


<% content_for :main_key do %>
  <chunk of="html">
    <section class="main-blog">
      <!-- <div class="wrap row small-up-1 medium-up-2 large-up-3"> -->

      <div class="wrap">

        <div class="row small-9 medium-9 large-9 columns" id="code-blog-details">

          <script id="code-blog-template" type="text/x-handlebars-template">

            {{#each code_posts}}
                <div class="code-blog-posts">

                  <h3 class="blog-post-title">{{title}}
                  </h3>

                  <div class="blog-pic">
                  <a href="{{url}}"><img src="img/blog_pics/{{image}}.jpg" alt={{title}} />
                  </div>




                  <div class="blog-post-description">{{description}}</div>

                </a>
              </div>

                  <!-- <div>
                    <h6>Title</h6>
                    <p>{{title}}</p>
                    <h6>Desc</h6>
                    <p>{{description}}</p>
                    <h6>URL</h6>
                    <p>{{url}}</p>
                  </div> -->

                  {{/each}}
            </script>
          </div> <!-- row -->
        </div> <!-- wrap -->
    </section>

  </chunk>
<% end %>
